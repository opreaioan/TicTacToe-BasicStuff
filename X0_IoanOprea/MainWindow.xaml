        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="X0 Game" Height="450" Width="800">
    <Grid Background="LightGray">
        <Menu HorizontalAlignment="Stretch">
            <MenuItem Header="Joc">
                <MenuItem Header="Start joc" Click="StartGame_Click"/>
            </MenuItem>
            <MenuItem Header="Ajutor">
                <MenuItem Header="Despre" Click="About_Click"/>
            </MenuItem>
        </Menu>
        <TextBlock Text="Bun venit! Pentru a incepe jocul alegeti din meniul &quot;Joc&quot; -&gt; &quot;Start joc&quot;"
